# ============================================================
# ANNADATA OS - Environment Configuration
# ============================================================
# Copy this file to .env and fill in the values

# General
APP_NAME=Annadata
APP_ENV=development
DEBUG=true
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# PostgreSQL
POSTGRES_SERVER=postgres
POSTGRES_USER=annadata
POSTGRES_PASSWORD=annadata_dev_password
POSTGRES_DB=annadata
POSTGRES_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# JWT Auth
JWT_SECRET_KEY=change-this-jwt-secret-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# External APIs (optional)
OPENWEATHER_API_KEY=
SENTINEL_HUB_CLIENT_ID=
SENTINEL_HUB_CLIENT_SECRET=
GEMINI_API_KEY=
DATA_GOV_API_KEY=
TELEGRAM_BOT_TOKEN=

# Service Ports
MSP_MITRA_PORT=8001
SOILSCAN_AI_PORT=8002
FASAL_RAKSHAK_PORT=8003
JAL_SHAKTI_PORT=8004
HARVEST_SHAKTI_PORT=8005
KISAAN_SAHAYAK_PORT=8006
PROTEIN_ENGINEERING_PORT=8007
